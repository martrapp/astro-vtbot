---
import signalURL from '@vtbag/turn-signal?url';
import forcedTraversalURL from '@vtbag/turn-signal/forced-traversal?url';
export interface Props {
	selector?: string;
	forcedTraversal?: boolean;
	backAndForth?: string;
}

const {
	selector,
	forcedTraversal,
	backAndForth = 'data-astro-transition, back, , forward ',
} = Astro.props;
---

{forcedTraversal && <script is:inline src={forcedTraversalURL} />}{
	selector ? (
		<script is:inline data-selector={selector} data-back-and-forth={backAndForth} src={signalURL} />
	) : (
		<script is:inline data-back-and-forth={backAndForth} src={signalURL} />
	)
}
