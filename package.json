{
  "name": "astro-vtbot",
  "version": "1.3.1",
  "description": "A Bag of Tricks for Astro's View Transitions",
  "homepage": "https://github.com/martrapp/astro-vtbot#readme",
  "bugs": {
    "url": "https://github.com/martrapp/astro-vtbot/issues"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martrapp/astro-vtbot.git"
  },
  "type": "module",
  "files": [
    "components",
    "animations",
    "integration"
  ],
  "exports": {
    ".": "./integration/index.ts",
    "./components/*.astro": {
      "import": "./components/*.astro",
      "types": "./components/*.d.ts"
    },
    "./animations/*.astro": {
      "import": "./animations/*.astro",
      "types": "./animations/*.d.ts"
    },
    "./animations/*": "./animations/*.ts",
    "./package.json": "./package.json",
    "./vtext": "./integration/view-transition-extension.ts",
    "./vite-plugin-extend": "./integration/vite-plugin-extend.ts"
  },
  "keywords": [
    "astro-component",
    "astro-integration",
    "view-transition",
    "view transition",
    "view transitions",
    "transition",
    "transitions",
    "swap",
    "load",
    "linter",
    "debug"
  ],
  "scripts": {
    "format": "prettier -w components integration animations",
    "test": "mkdir -p test/fixture/node_modules && (cd test/fixture/node_modules && rm -f astro-vtbot; ln -sT ../../.. astro-vtbot) &&  npx playwright test"
  },
  "peerDependencies": {
    "astro": "^4.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.40.0",
    "@types/dom-view-transitions": "^1.0.4",
    "@types/node": "^20.10.4",
    "astro": "^4.0.3",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.13.0",
    "typescript": "^5.3.3"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/martrapp"
  }
}
